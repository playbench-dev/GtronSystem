<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <!-- shadow (밑으로) : 그림자 -->
            <item android:left="0dp">
                <shape>
                    <corners android:radius="100dp" />
                    <solid android:color="#D9E5FF" />
                </shape>
            </item>
            <!-- background (위로) -->
            <item android:right="0dp">
                <shape>
                    <corners android:radius="100dp" />
                    <solid android:color="#ffffff" />
                    <gradient
                        android:angle="90"
                        android:centerY="0.75"
                        android:endColor="#1f98e1"
                        android:startColor="#1f98e1" />
                    <stroke android:width="0dp" android:color="#EAEAEA" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>