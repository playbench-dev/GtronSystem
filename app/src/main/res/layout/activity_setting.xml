<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="@color/colorPrimary"
        android:weightSum="100">

        <LinearLayout
            android:id="@+id/linear_setting_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:weightSum="100">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="100">
                <ImageView
                    android:id="@+id/img_setting_back"
                    android:scaleType="fitCenter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:src="@drawable/ic_back_main"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="Settings"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/txt_setting_save"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:weightSum="100"
            android:text="save"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="18dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="92">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#eaeaea"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="8dp"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#ffffff"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"></LinearLayout>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:src="@drawable/ic_setting_popup" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"></LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="94">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:gravity="center_vertical"
                        android:text="Push notification"
                        android:textColor="#25476a"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="10"
                android:background="#ffffff"
                android:gravity="top"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"></LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:gravity="center_vertical"
                    android:text="Push message"
                    android:textColor="#707070"
                    android:textSize="14sp" />

                <Switch
                    android:id="@+id/swh_setting_push"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:checked="true"
                    android:gravity="center"
                    android:thumb="@drawable/switch_thumb_selector"
                    android:track="@drawable/switch_track_selector" />
            </LinearLayout>

            <gtron.com.gtronsystem.Views.InterceptLinearLayout
                android:id="@+id/linear_popup_swh_parent"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="10"
                android:background="#ffffff"
                android:gravity="top"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"></LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:gravity="center_vertical"
                    android:text="Popup message"
                    android:textColor="#707070"
                    android:textSize="14sp" />

                <Switch
                    android:id="@+id/swh_setting_popup"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:checked="true"
                    android:gravity="center"
                    android:thumb="@drawable/switch_thumb_selector"
                    android:track="@drawable/switch_track_selector"
                    android:enabled="false"/>
            </gtron.com.gtronsystem.Views.InterceptLinearLayout>

            <LinearLayout
                android:id="@+id/linear_setting_sound_max_parent"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="10"
                android:background="#ffffff"
                android:gravity="top"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"></LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:gravity="center_vertical"
                    android:text="Sound Max"
                    android:textColor="#707070"
                    android:textSize="14sp" />

                <Switch
                    android:id="@+id/swh_setting_sound"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:checked="true"
                    android:gravity="center"
                    android:thumb="@drawable/switch_thumb_selector"
                    android:track="@drawable/switch_track_selector" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#ffffff"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="#F0F3F7"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#ffffff"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"></LinearLayout>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:src="@drawable/ic_setting_alram" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"></LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="94">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Notification time"
                        android:textColor="#25476a"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#ffffff"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#ffffff"
                android:gravity="top"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"></LinearLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="42"
                    android:background="@drawable/custom_stroke">
                    <TextView
                        android:id="@+id/txt_setting_time_start"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:textColor="#707070"
                        android:text="06:00"
                        android:gravity="center_vertical"/>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_triangle_arrow"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"/>
                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:gravity="center"
                    android:text="~"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="42"
                    android:background="@drawable/custom_stroke">
                    <TextView
                        android:id="@+id/txt_setting_time_end"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:textColor="#707070"
                        android:text="18:00"
                        android:gravity="center_vertical"/>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_triangle_arrow"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"/>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#ffffff"></LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_setting_sound_vibrator_parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="#ffffff"
                        android:weightSum="100">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"></LinearLayout>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7"
                            android:src="@drawable/ic_setting_sound" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"></LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="70">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="Sound &amp; Vibration"
                                android:textColor="#25476a"
                                android:textSize="16sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="#ffffff"></LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"></LinearLayout>

                        <RadioGroup
                            android:id="@+id/rdo_setting_sound_vibration_rdg"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="94"
                            android:gravity="center"
                            android:orientation="vertical">

                            <FrameLayout
                                android:id="@+id/frame_setting_sound"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical">
                                <TextView
                                    android:id="@+id/txt_setting_sound"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="Sound"
                                    android:textColor="#707070"
                                    android:textSize="14sp"/>

                                <RadioButton
                                    android:id="@+id/rdo_setting_sound"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"/>
                            </FrameLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="10dp"></LinearLayout>

                            <FrameLayout
                                android:id="@+id/frame_setting_vibration"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical">
                                <TextView
                                    android:id="@+id/txt_setting_vibration"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="Vibration"
                                    android:textColor="#707070"
                                    android:textSize="14sp"/>

                                <RadioButton
                                    android:id="@+id/rdo_setting_vibration"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"/>
                            </FrameLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="10dp"></LinearLayout>

                            <FrameLayout
                                android:id="@+id/frame_setting_sound_vibration"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical">
                                <TextView
                                    android:id="@+id/txt_setting_sound_vibration"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="Sound &amp; Vibration"
                                    android:textColor="#707070"
                                    android:textSize="14sp"/>

                                <RadioButton
                                    android:id="@+id/rdo_setting_sound_vibration"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"/>
                            </FrameLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="20dp"></LinearLayout>
                        </RadioGroup>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"></LinearLayout>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_setting_repeat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="7dp"
                        android:background="#F0F3F7"></LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#ffffff"
                        android:weightSum="100">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"></LinearLayout>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7"
                            android:src="@drawable/ic_setting_repeat" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"></LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="94">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="center_vertical"
                                android:text="Alarm repeat cycle"
                                android:textColor="#25476a"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:weightSum="100">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="10dp"></LinearLayout>

                        <RadioGroup
                            android:id="@+id/radio_setting_alarm_grp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="100">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"></LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="94"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="100">

                                    <FrameLayout
                                        android:id="@+id/frame_setting_0"
                                        android:layout_width="0dp"
                                        android:layout_weight="47"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical">
                                        <TextView
                                            android:id="@+id/txt_setting_0"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:text="Cont."
                                            android:textColor="#707070"
                                            android:textSize="14sp"/>

                                        <RadioButton
                                            android:id="@+id/radio_setting_0"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="right"/>
                                    </FrameLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="4"></LinearLayout>

                                    <FrameLayout
                                        android:id="@+id/frame_setting_5"
                                        android:layout_width="0dp"
                                        android:layout_weight="47"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical">
                                        <TextView
                                            android:id="@+id/txt_setting_5"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:text="Once"
                                            android:textColor="#707070"
                                            android:textSize="14sp"/>

                                        <RadioButton
                                            android:id="@+id/radio_setting_5"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="right"/>
                                    </FrameLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp"></LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="100">

                                    <FrameLayout
                                        android:id="@+id/frame_setting_1"
                                        android:layout_width="0dp"
                                        android:layout_weight="47"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical">
                                        <TextView
                                            android:id="@+id/txt_setting_1"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:text="1M"
                                            android:textColor="#707070"
                                            android:textSize="14sp"/>

                                        <RadioButton
                                            android:id="@+id/radio_setting_1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="right"/>
                                    </FrameLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="4"></LinearLayout>

                                    <FrameLayout
                                        android:id="@+id/frame_setting_2"
                                        android:layout_width="0dp"
                                        android:layout_weight="47"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical">
                                        <TextView
                                            android:id="@+id/txt_setting_2"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:text="5M"
                                            android:textColor="#707070"
                                            android:textSize="14sp"/>

                                        <RadioButton
                                            android:id="@+id/radio_setting_2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="right"/>
                                    </FrameLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp"></LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="100">

                                    <FrameLayout
                                        android:id="@+id/frame_setting_3"
                                        android:layout_width="0dp"
                                        android:layout_weight="47"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical">
                                        <TextView
                                            android:id="@+id/txt_setting_3"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:text="10M"
                                            android:textColor="#707070"
                                            android:textSize="14sp"/>

                                        <RadioButton
                                            android:id="@+id/radio_setting_3"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="right"/>
                                    </FrameLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="4"></LinearLayout>

                                    <FrameLayout
                                        android:id="@+id/frame_setting_4"
                                        android:layout_width="0dp"
                                        android:layout_weight="47"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical">
                                        <TextView
                                            android:id="@+id/txt_setting_4"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:text="30M"
                                            android:textColor="#707070"
                                            android:textSize="14sp"/>

                                        <RadioButton
                                            android:id="@+id/radio_setting_4"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="right"/>
                                    </FrameLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </RadioGroup>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="20dp"></LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_setting_select_alarm_sound_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:background="#F0F3F7"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#ffffff"
                    android:weightSum="100">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"></LinearLayout>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:src="@drawable/ic_setting_select"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"></LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="94">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="Select alarm sound"
                            android:textColor="#25476a"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:gravity="top"
                    android:orientation="vertical"
                    android:weightSum="100">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="10dp"></LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:weightSum="100">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"></LinearLayout>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="94"
                            android:background="@drawable/custom_stroke">

                            <TextView
                                android:id="@+id/txt_setting_alarm_sound"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:textSize="14sp"
                                android:text="Alarm Sound"
                                android:textColor="#707070"
                                android:layout_marginLeft="10dp"/>

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_triangle_arrow"
                                android:layout_gravity="right"
                                android:layout_marginRight="10dp"/>
                        </FrameLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="10dp"></LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="7dp"
                        android:background="#F0F3F7"></LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="#ffffff"
                        android:weightSum="100">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"></LinearLayout>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7"
                            android:src="@drawable/ic_setting_select"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"></LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="94">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="Sound length"
                                android:textColor="#25476a"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>


                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:weightSum="100">

                        <RadioButton
                            android:id="@+id/rdo_setting_1s"
                            android:layout_width="0dp"
                            android:layout_weight="23.5"
                            android:layout_height="wrap_content"
                            android:text="1s"/>

                        <RadioButton
                            android:id="@+id/rdo_setting_5s"
                            android:layout_width="0dp"
                            android:layout_weight="23.5"
                            android:layout_height="wrap_content"
                            android:text="5s" />

                        <RadioButton
                            android:id="@+id/rdo_setting_10s"
                            android:layout_width="0dp"
                            android:layout_weight="23.5"
                            android:layout_height="wrap_content"
                            android:text="10s"/>

                        <RadioButton
                            android:id="@+id/rdo_setting_20s"
                            android:layout_width="0dp"
                            android:layout_weight="23.5"
                            android:layout_height="wrap_content"
                            android:text="20s"/>
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"></LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
