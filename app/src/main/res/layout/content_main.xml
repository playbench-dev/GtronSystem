                <ImageButton
                    android:id="@+id/btn_fold_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:gravity="center"
                    android:src="@drawable/ic_up_arrow"
                    android:padding="5dp"
                    android:background="#ffffff"
                    android:scaleType="fitCenter"
                    android:text="접어두기"/>

            </LinearLayout>
            <gtron.com.gtronsystem.SensorFunc.DynamicGridView
                android:id="@+id/grid_4"
                android:layout_width="match_parent"
                android:numColumns="4"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:horizontalSpacing="2dp"
                android:verticalSpacing="2dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"></LinearLayout>
            <LinearLayout
                android:id="@+id/lin_grid_title_5"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="#ffffff"
                android:elevation="3dp"
                android:weightSum="100"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/txt_process_name_5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text="process 5 "/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"></LinearLayout>
                <ImageButton
                    android:id="@+id/btn_fold_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:gravity="center"
                    android:src="@drawable/ic_up_arrow"
                    android:padding="5dp"
                    android:background="#ffffff"
                    android:scaleType="fitCenter"
                    android:text="접어두기"/>

            </LinearLayout>
            <gtron.com.gtronsystem.SensorFunc.DynamicGridView
                android:id="@+id/grid_5"
                android:layout_width="match_parent"
                android:numColumns="4"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:horizontalSpacing="2dp"
                android:verticalSpacing="2dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"></LinearLayout>
            <LinearLayout
                android:id="@+id/lin_grid_title_6"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="#ffffff"
                android:elevation="3dp"
                android:weightSum="100"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/txt_process_name_6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text="process 6 "/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"></LinearLayout>
                <ImageButton
                    android:id="@+id/btn_fold_6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:gravity="center"
                    android:src="@drawable/ic_up_arrow"
                    android:padding="5dp"
                    android:background="#ffffff"
                    android:scaleType="fitCenter"
                    android:text="접어두기"/>
            </LinearLayout>
            <gtron.com.gtronsystem.SensorFunc.DynamicGridView
                android:id="@+id/grid_6"
                android:layout_width="match_parent"
                android:numColumns="4"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:horizontalSpacing="2dp"
                android:verticalSpacing="2dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"></LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
